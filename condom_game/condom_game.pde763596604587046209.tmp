//text
PFont myFont;
//image
PImage condomImg;
//earth
Earth earth;
//controller
Controller controller;
//enemies
Enemy[] enemies;
int enemyUnit=100;
//score
int counter;
boolean count= false;
//count down 
int begin; 
int duration;
int time;

void setup() {
  fullScreen();
  smooth();

  //text
  myFont = createFont("Calibri", 40);
  textFont(myFont);
  textAlign(CENTER, CENTER);

  //image
  condomImg = loadImage("data/condom.png");
  //count down
  begin = millis();
  time = duration = 30;

  //earth
  earth=new Earth(width/2, height/2, 50, 253, 23, 233);
  //controller
  controller = new Controller(30, condomImg);
  //enemies
  enemies = new Enemy[enemyUnit];
  for (int i=0; i<enemyUnit; i++) {
    enemies[i]=new Enemy(random(width), random(height), random(2, 10), random(1, 3), random(1, 3), earth.posX, earth.posY, random(TWO_PI), random(0.5, 1));
  }
}

void draw() {
  background(255, 192, 203);//51 blacky

  ////////////////////////// Count Down /////////////////////////////////////////////////////////////////////////////
  if (time > 0)  time = duration - (millis() - begin)/1000;
  text(time, width-100, 20);

  //Run classes
  earth.run();
  controller.run();
  for (Enemy en : enemies) {
    en.run();
  }

  ////////////////////////// Counter ////////////////////////////////////////////////////////////////////////////////
   ///////////////////////////////////sperm
    pushMatrix();
    //translate Rotate Scale
    translate(0, 0);
    
    //ellipse of the sperm
    noStroke();
    fill(248, 248, 248);
    ellipseMode(CENTER);
    ellipse(0, 0, 30, 50);
    ellipse(0, 20, 15, 30);

    //tail
    noFill();
    stroke(248, 248, 248);
    strokeWeight(4);
    bezier(0, 30, 10, 50, 20, 50, 0, 70);
    popMatrix();
    ////////////////////////////END sperm
    
  text(counter, 50, 20);

  for (int i=0; i<enemyUnit; i++) {

    float d2 = dist(mouseX, mouseY, enemies[i].posX, enemies[i].posY);//distance between controller and enemies

    if (d2<30) {
      enemies[i].posXX= -100;
    }

    if (enemies[i].posXX== -100) {
      counter++;
      enemies[i].posXX=100;
    }
  }
  //////////////////////// END Counter //////////////////////////
}//end draw